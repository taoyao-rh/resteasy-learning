<?xml version="1.0" encoding="UTF-8"?>
<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:8.1 http://www.infinispan.org/schemas/infinispan-config-8.1.xsd"
    xmlns="urn:infinispan:config:8.1">
    <cache-container default-cache="skeleton-key">
        <jmx duplicate-domains="true"/>
        <local-cache name="skeleton-key">
            <eviction strategy="LIRS"/>
            <persistence passivation="false">
                <file-store shared="false"
                            preload="true"
                            path="${java.io.tmpdir}"/>
            </persistence>
        </local-cache>
    </cache-container>
</infinispan>